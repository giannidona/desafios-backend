<div class="flex justify-center py-5">
  <h1 class="font-bold">YOUR PROFILE</h1>
</div>

<div class="w-2/4 m-auto pt-5 block bg-sky-300 rounded">
  <div>
    <img
      class="w-1/2 m-auto"
      src="http://localhost:8080/static/{{this.image}}"
    />
  </div>
  <div class="py-5 text-center">
    <p>{{this.username}}</p>
    <p>{{this.email}}</p>
    {{#if admin}}
      <p>admin</p>
    {{else}}
      <p>user</p>
    {{/if}}
  </div>
</div>
<div class="flex justify-center my-5">
  <button
    class="bg-red-500 py-1.5 px-4 rounded font-bold hover:bg-red-400"
    id="btn-logout"
  >Logout</button>
</div>